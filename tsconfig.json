{
  "compilerOptions": {
    "outDir": "/dist",
    "rootDirs": ["src/backend", "src/frontend"],
    "declaration": true, // Generate .d.ts files
    "declarationMap": true,
    "emitDeclarationOnly": true,  // Ensures only .d.ts files are emitted
    "noEmitOnError": true,
    "baseUrl": "",
    "paths": {
      "@frontend/*": [
        "src/frontend/*"
      ],
      "@backend/*": [
        "src/backend/*"
      ],
    },
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "esnext"
    ],
    "types": [
      "jest",
      "node"
    ],
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
  },
  "include": [
    "src/**/*"
  ],
    "exclude": [
      "node_modules",
      "dist",
      "**/*.test.ts",
      "**/*.story.ts",
      "**/*.test.tsx",
    ]
  
}