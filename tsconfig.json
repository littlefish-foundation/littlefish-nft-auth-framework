{
    "compilerOptions": {
      "baseUrl": "",
      "paths": {
        "@frontend/*": ["src/frontend/*"],
        "@backend/*": ["src/backend/*"],
      },
      "target": "es5",
      "allowJs" : true,
      "module": "commonjs",
      "lib": ["dom", "esnext"],
      "types": ["jest", "node"],
      "jsx": "react-jsx",
      "strict": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "isolatedModules": true
    },
    "include": ["src/**/*", "test/**/*", ".d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "test.js", "package.json"]
  }