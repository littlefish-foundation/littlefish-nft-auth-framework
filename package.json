{
  "name": "littlefish-nft-auth-framework",
  "version": "0.1.11",
  "description": "Open Source NFT & Wallet Auth Framework for Cardano",
  "main": "dist/index.js",
  "scripts": {
    "build": "babel src --out-dir dist --copy-files --ignore **/*.test.js,**/*.story.js",
    "test": "npx jest",
    "prepublish": "npm run build",
    "lint": "eslint 'src/**/*.{js,jsx}'",
    "clear_jest": "jest --clearCache"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/littlefish-foundation/littlefish-nft-auth-framework"
  },
  "keywords": [
    "react",
    "wallet",
    "cardano",
    "blockchain",
    "nft",
    "auth"
  ],
  "peerDependencies": {
    "react": "^18",
    "react-dom": "^18"
  },
  "dependencies": {
    "@prisma/client": "^5.13.0",
    "@types/jest": "^29.5.12",
    "bcryptjs": "^2.4.3",
    "cbor-js": "^0.1.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.19.2",
    "jose": "^5.2.4",
    "prisma": "^5.13.0",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.51.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.1",
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.24.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/cbor-js": "^0.1.1",
    "@types/node": "^20.12.7",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ],
        "rules": {
          "typescript-eslint/rule-name": "error"
        }
      }
    ]
  },
  "author": "Littlefish Foundation",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/littlefish-foundation/littlefish-nft-auth-framework/issues"
  },
  "homepage": "https://github.com/littlefish-foundation/littlefish-nft-auth-framework#readme"
}
